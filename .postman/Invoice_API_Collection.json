						}
					]
				},
				"description": "Filter invoices by due date range using RFC3339 format"
			},
			"response": []
		},
		{
			"name": "List Invoices - Complex Filter",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?page=1&limit=20&branchId={{branch_id}}&memberId={{member_id}}&status=pending&dateField=created_at&startDate=2024-01-01T00:00:00Z&endDate=2024-12-31T23:59:59Z",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "20"
						},
						{
							"key": "branchId",
							"value": "{{branch_id}}"
						},
						{
							"key": "memberId",
							"value": "{{member_id}}"
						},
						{
							"key": "status",
							"value": "pending"
						},
						{
							"key": "dateField",
							"value": "created_at"
						},
						{
							"key": "startDate",
							"value": "2024-01-01T00:00:00Z"
						},
						{
							"key": "endDate",
							"value": "2024-12-31T23:59:59Z"
						}
					]
