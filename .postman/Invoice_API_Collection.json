				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?dateField=created_at&startDate=2024-01-01T00:00:00Z&endDate=2024-12-31T23:59:59Z",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "dateField",
							"value": "created_at"
						},
						{
							"key": "startDate",
							"value": "2024-01-01T00:00:00Z"
						},
						{
							"key": "endDate",
							"value": "2024-12-31T23:59:59Z"
						}
					]
				},
				"description": "Filter invoices by creation date range using RFC3339 format"
			},
			"response": []
		},
		{
			"name": "List Invoices by Date Range (Due Date)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?dateField=due_date&startDate=2024-01-01T00:00:00Z&endDate=2024-12-31T23:59:59Z",
