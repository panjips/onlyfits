{
	"info": {
		"_postman_id": "invoice-api-collection",
		"name": "Invoice API Collection",
		"description": "Complete Postman collection for Invoice API endpoints with authentication and role-based access",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "your_jwt_token_here",
			"type": "string"
		},
		{
			"key": "invoice_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "member_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "branch_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "subscription_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		},
		{
			"key": "organization_id",
			"value": "00000000-0000-0000-0000-000000000000",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Create Invoice",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"invoiceNumber\": \"INV-2024-001\",\n  \"memberId\": \"{{member_id}}\",\n  \"branchId\": \"{{branch_id}}\",\n  \"subscriptionId\": \"{{subscription_id}}\",\n  \"amount\": 100.00,\n  \"taxAmount\": 10.00,\n  \"status\": \"pending\",\n  \"dueDate\": \"2024-12-31T23:59:59Z\",\n  \"notes\": \"Monthly subscription payment\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/invoices",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"]
				},
				"description": "Create a new invoice. Requires super_admin or admin role.\n\nRequired fields:\n- memberId: UUID of the member\n- amount: Invoice amount (>= 0)\n\nOptional fields:\n- invoiceNumber: If empty, will be generated by service\n- branchId: UUID of the branch\n- subscriptionId: UUID of the subscription\n- taxAmount: Tax amount (>= 0)\n- status: Invoice status (pending, paid, cancelled)\n- dueDate: Due date in RFC3339 format\n- notes: Additional notes"
			},
			"response": []
		},
		{
			"name": "Create Invoice - Minimal",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"memberId\": \"{{member_id}}\",\n  \"amount\": 50.00\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/invoices",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"]
				},
				"description": "Create invoice with only required fields (memberId and amount)"
			},
			"response": []
		},
		{
			"name": "Update Invoice",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"branchId\": \"{{branch_id}}\",\n  \"subscriptionId\": \"{{subscription_id}}\",\n  \"amount\": 120.00,\n  \"taxAmount\": 12.00,\n  \"status\": \"paid\",\n  \"dueDate\": \"2024-12-31T23:59:59Z\",\n  \"paidAt\": \"2024-01-15T10:30:00Z\",\n  \"notes\": \"Updated invoice - payment received\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/invoices/{{invoice_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices", "{{invoice_id}}"]
				},
				"description": "Update an existing invoice. Requires super_admin or admin role.\n\nAll fields are optional:\n- branchId: UUID of the branch\n- subscriptionId: UUID of the subscription\n- amount: Invoice amount (>= 0)\n- taxAmount: Tax amount (>= 0)\n- status: Invoice status (pending, paid, cancelled)\n- dueDate: Due date in RFC3339 format\n- paidAt: Payment date in RFC3339 format\n- notes: Additional notes"
			},
			"response": []
		},
		{
			"name": "Update Invoice - Status Only",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"status\": \"paid\",\n  \"paidAt\": \"2024-01-15T10:30:00Z\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/invoices/{{invoice_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices", "{{invoice_id}}"]
				},
				"description": "Update only invoice status and payment date"
			},
			"response": []
		},
		{
			"name": "Get Invoice by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices/{{invoice_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices", "{{invoice_id}}"]
				},
				"description": "Retrieve a specific invoice by ID. Requires authentication."
			},
			"response": []
		},
		{
			"name": "Delete Invoice",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices/{{invoice_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices", "{{invoice_id}}"]
				},
				"description": "Delete an invoice. Requires super_admin or admin role."
			},
			"response": []
		},
		{
			"name": "List All Invoices",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"]
				},
				"description": "List all invoices without filters. Requires authentication."
			},
			"response": []
		},
		{
			"name": "List Invoices with Pagination",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?page=1&limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "page",
							"value": "1"
						},
						{
							"key": "limit",
							"value": "10"
						}
					]
				},
				"description": "List invoices with pagination (page 1, limit 10)"
			},
			"response": []
		},
		{
			"name": "List Invoices by Branch",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?branchId={{branch_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "branchId",
							"value": "{{branch_id}}"
						}
					]
				},
				"description": "Filter invoices by specific branch ID"
			},
			"response": []
		},
		{
			"name": "List Invoices by Organization",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?organizationId={{organization_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "organizationId",
							"value": "{{organization_id}}"
						}
					]
				},
				"description": "Filter invoices by organization ID (inferred via member->branch->organization)"
			},
			"response": []
		},
		{
			"name": "List Invoices by Member",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?memberId={{member_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "memberId",
							"value": "{{member_id}}"
						}
					]
				},
				"description": "Filter invoices by specific member ID"
			},
			"response": []
		},
		{
			"name": "List Invoices by Status",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/invoices?status=pending",
					"host": ["{{base_url}}"],
					"path": ["api", "v1", "invoices"],
					"query": [
						{
							"key": "status",
							"value": "pending"
						}
					]
				},
				"description": "Filter invoices by status (pending, paid, cancelled)"
			},
			"response": []
