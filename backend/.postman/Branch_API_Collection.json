{
  "info": {
    "_postman_id": "branch-api-collection",
    "name": "Branch API Collection",
    "description": "Complete Postman collection for Branch API endpoints with authentication and role-based access",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "your_jwt_token_here",
      "type": "string"
    },
    {
      "key": "branch_id",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    },
    {
      "key": "organization_id",
      "value": "00000000-0000-0000-0000-000000000000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Branch",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"organizationId\": \"{{organization_id}}\",\n  \"name\": \"Downtown Branch\",\n  \"code\": \"DT001\",\n  \"address\": \"123 Main Street, Downtown\",\n  \"phone\": \"+1-555-0123\",\n  \"email\": \"downtown@company.com\",\n  \"timezone\": \"America/New_York\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/branches",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches"]
        },
        "description": "Create a new branch. Requires super_admin or admin role.\n\nRequired fields:\n- organizationId: UUID of the organization\n- name: Branch name\n\nOptional fields:\n- code: Branch code\n- address: Branch address\n- phone: Branch phone number\n- email: Branch email\n- timezone: Branch timezone"
      },
      "response": []
    },
    {
      "name": "Create Branch - Minimal",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"organizationId\": \"{{organization_id}}\",\n  \"name\": \"Uptown Branch\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/branches",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches"]
        },
        "description": "Create branch with only required fields (organizationId and name)"
      },
      "response": []
    },
    {
      "name": "Update Branch",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Downtown Branch\",\n  \"code\": \"DT001-UPDATED\",\n  \"address\": \"456 Updated Street, Downtown\",\n  \"phone\": \"+1-555-0124\",\n  \"email\": \"updated-downtown@company.com\",\n  \"timezone\": \"America/New_York\",\n  \"isActive\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/branches/{{branch_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches", "{{branch_id}}"]
        },
        "description": "Update an existing branch. Requires super_admin or admin role.\n\nAll fields are optional:\n- name: Branch name\n- code: Branch code\n- address: Branch address\n- phone: Branch phone number\n- email: Branch email\n- timezone: Branch timezone\n- isActive: Branch active status"
      },
      "response": []
    },
    {
      "name": "Update Branch - Partial",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+1-555-9999\",\n  \"isActive\": false\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/branches/{{branch_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches", "{{branch_id}}"]
        },
        "description": "Update only specific fields (phone and isActive)"
      },
      "response": []
    },
    {
      "name": "Get Branch by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/branches/{{branch_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches", "{{branch_id}}"]
        },
        "description": "Retrieve a specific branch by ID. Requires authentication."
      },
      "response": []
    },
    {
      "name": "Delete Branch",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/branches/{{branch_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches", "{{branch_id}}"]
        },
        "description": "Delete a branch. Requires super_admin or admin role."
      },
      "response": []
    },
    {
      "name": "List All Branches",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/branches",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches"]
        },
        "description": "List all branches without pagination. Requires authentication."
      },
      "response": []
    },
    {
      "name": "List Branches with Pagination",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/branches?page=1&limit=10",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        },
        "description": "List branches with pagination (page 1, limit 10)"
      },
      "response": []
    },
    {
      "name": "List Branches - Page 2",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/branches?page=2&limit=5",
          "host": ["{{base_url}}"],
          "path": ["api", "v1", "branches"],
          "query": [
            {
              "key": "page",
              "value": "2"
            },
            {
              "key": "limit",
              "value": "5"
            }
          ]
        },
        "description": "List branches with pagination (page 2, limit 5)"
      },
      "response": []
    }
  ]
}
